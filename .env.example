# Configuration Phone Checker via variables d'environnement

# Cache
PHONE_CHECKER_CACHE_ENABLED=true
PHONE_CHECKER_CACHE_DIR=.cache
PHONE_CHECKER_CACHE_EXPIRE=3600

# Logging
PHONE_CHECKER_LOG_LEVEL=INFO
PHONE_CHECKER_LOG_FILE=logs/phone_checker.log

# Proxy (optionnel)
# PHONE_CHECKER_PROXY_URL=http://proxy.example.com:8080

# Plateformes - désactiver une plateforme
# PHONE_CHECKER_WHATSAPP_ENABLED=false
# PHONE_CHECKER_TELEGRAM_ENABLED=false

# Rate limiting personnalisé
# PHONE_CHECKER_WHATSAPP_RATE_CALLS=5
# PHONE_CHECKER_WHATSAPP_RATE_PERIOD=60
